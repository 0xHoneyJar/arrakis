# =============================================================================
# SIETCH UNIFIED - TERRAFORM VARIABLES EXAMPLE
# =============================================================================
# Copy this file to terraform.tfvars and fill in your values.
# DO NOT commit terraform.tfvars to version control!
# =============================================================================

# =============================================================================
# PROJECT CONFIGURATION (Required)
# =============================================================================

project_id   = "your-gcp-project-id"
project_name = "sietch-unified"
region       = "us-central1"
environment  = "development"  # development, staging, production

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Development: db-f1-micro (shared CPU, 614MB RAM)
# Production: db-custom-2-4096 (2 vCPU, 4GB RAM)
db_tier      = "db-f1-micro"
db_disk_size = 10  # GB

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================

redis_memory_gb = 1

# =============================================================================
# CLOUD RUN CONFIGURATION
# =============================================================================

cpu_limit     = "1"
memory_limit  = "512Mi"
max_instances = 10

# =============================================================================
# DISCORD CONFIGURATION
# =============================================================================

discord_client_id = ""  # Your Discord application client ID
discord_guild_id  = ""  # Your Discord server ID

# =============================================================================
# TELEGRAM CONFIGURATION
# =============================================================================

telegram_miniapp_url = ""  # URL where Mini App is deployed

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

enable_cloud_armor = false  # Enable WAF (recommended for production)

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================

# Create notification channels in GCP Console first, then add their IDs here
alert_notification_channels = []

# =============================================================================
# GDPR / DATA RESIDENCY
# =============================================================================

# Options: us, eu, asia
# This affects where data is stored for GDPR compliance
data_region = "us"
